
 <%= stylesheet_link_tag    'style' %>
<h1>Users</h1>

<table class = 'table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>User type</th>
      <th>Tasks you submitted</th>
      <th colspan="3">More Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if user.user_type == 'user' %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.user_type %></td>
        <td><%= user.tasks.count %></td>
        
        <td><%= link_to 'Show', user, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

