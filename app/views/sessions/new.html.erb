
<h1>Login</h1>
<%= form_tag sessions_path, class: 'form-inline' do |form| %>
  <div class=”field”>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <div class='field'>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <div class='actions'>
    <%= submit_tag 'Login', class: 'btn btn-success' %>
  </div>
<% end %>