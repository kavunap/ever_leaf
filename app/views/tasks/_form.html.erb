<%= form_with(model: task, class: 'task-card', local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, class: 'font-weight-bolder' %>&emsp;&emsp;&emsp;&emsp;
    <%= form.text_field :name, class: "field1" %>
  </div>
  &nbsp;&nbsp;&nbsp;&nbsp;
  <div class="field"> 
    <%= form.label :content, class: 'font-weight-bolder' %> &emsp;&emsp;&emsp;
    <%= form.text_area :content, class: "field1" %>
  </div>
  &nbsp;&nbsp;&nbsp;&nbsp;
  <div class="field">
    <%= form.label :status, class: 'font-weight-bolder' %>&emsp;&emsp;&emsp;&emsp;
    <%= form.select :status, ['Not Started', 'In progress', 'Done'], class: "field1" %>
  </div>
  &nbsp;&nbsp;&nbsp;&nbsp;
  <div class="field">
    <%= form.label :priority, class: 'font-weight-bolder' %>&emsp;&emsp;&emsp;
    <%= form.select :priority, ['High', 'medium', 'Under'], class: "field1" %>
  </div>
  &nbsp;&nbsp;&nbsp;&nbsp;
  <div class="field">
    <%= form.label :start_date, class: 'font-weight-bolder' %>&emsp;&emsp;
    <%= form.date_select :start_date, class: "field1" %>
  </div>
  &nbsp;&nbsp;&nbsp;&nbsp;
  <div class="field">
    <%= form.label :end_date, class: 'font-weight-bolder' %>&emsp;&emsp;
    <%= form.date_select :end_date, class: "field1" %>
  </div>
  &nbsp;&nbsp;&nbsp;&nbsp;
  
  <div class="field">
  
    <%= form.hidden_field :user_id, value: 'current_user.id' %>
  </div>
  <div class="actions">
    <%= form.submit 'Unda task', class:'btn btn-success' %>
  </div>
<% end %>
