<%= paginate @tasks %>
<center><h1>Tasks</h1></center>

<table class = "table-bordered" style = "margin-left:10%;">

  <thead class = "table bg-primary">
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"> More Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class = "table table-active">
        <td><%= task.name %></td>
        <td><%= task.content %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= task.start_date %></td>
        <td><%= task.end_date %></td>
        <td><%= link_to 'Show', task, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr></p>
    <% end %>
  </tbody>
</table>

<br>
