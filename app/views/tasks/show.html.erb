

<p>
  <strong><%= t('tasks.title') %>:</strong>
  <%= @task.name %>
</p>

<p>
  <strong><%= t('tasks.content') %>:</strong>
  <%= @task.content %>
</p>

<p>
  <strong><%= t('tasks.status') %>:</strong>
  <%= @task.status %>
</p>

<p>
  <strong><%= t('tasks.priority') %>:</strong>
  <%= @task.priority %>
</p>

<p>
  <strong><%= t('tasks.start') %>:</strong>
  <%= @task.start_date %>
</p>

<p>
  <strong><%= t('tasks.end') %>:</strong>
  <%= @task.end_date %>
</p>

<p> <h2> Labels attached to this task</h2>
<br>

<% @task.label_id.each do |l| %>
  <% Label.all.each do |obj| %>
    <% la = l.to_f %>
    <% if obj.id == la %>
    <b>Label Title:</b> <%= obj.title %>&emsp;
    <b>Label contents:</b><%= obj.content %><br>
  <% end %>
  <% end %>
<% end %>

<%= link_to  t('tasks.edit') , edit_task_path(@task), class: 'btn btn-info' %> |
<%= link_to  t('tasks.back'), tasks_path, class: 'btn btn-info' %>
